# http://editorconfig.org
# (maybe `prettier` should handle this)
root = true

[*]
# Unix-style
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# indentation
indent_style = tab
indent_size = tab
tab_width = 4

# might have issues with longs strings or urls
max_line_length = 120

# can't seem to trigger these in any editor
quote_type = single
spaces_around_brackets = true
spaces_around_operators = true
indent_brace_style = K&R


# Custom indentations per filetype(s)
# https://google.github.io/styleguide/shell.xml#Indentation
[*.{yml,yaml,md,sh}]
indent_style = space
indent_size = 2

[package.json]
# due to possible long script commands
max_line_length = 180

# All other files and locations are either
# generated or not relevant to edit.
