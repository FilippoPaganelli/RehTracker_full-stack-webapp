{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src/",
		"outDir": "./dist/",
		"lib": ["dom", "dom.iterable", "esnext"],
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["src/**/*.test.ts", "node_modules"]
}
