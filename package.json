	"dependencies": {
		"typescript": "^5.2.2",
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express-session": "^1.17.3",
		"jsonwebtoken": "^8.5.1",
