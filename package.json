{
	"name": "rehtracker",
	"version": "1.0.0",
	"private": true,
	"main": "/Server/dist/server.js",
	"workspaces": [
		"./**/*"
	],
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"install-backend": "yarn workspace @rehtracker/backend install",
		"install-frontend": "yarn workspace @rehtracker/frontend install",
		"install-all": "yarn install-backend && yarn install-frontend",
		"build-backend": "yarn workspace @rehtracker/backend build",
		"build-frontend": "yarn workspace @rehtracker/frontend build",
		"build-all": "yarn build-backend && yarn build-frontend",
		"heroku-postbuild": "yarn install-all && yarn build-all"
	},
	"keywords": [],
	"author": "Filippo Paganelli",
	"license": "ISC",
	"dependencies": {
		"typescript": "^5.2.2",
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express-session": "^1.17.3",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^7.5.1",
		"nodemon": "^3.0.1"
	},
	"engines": {
		"node": "20.6.1"
	},
	"devDependencies": {
		"ts-loader": "^9.4.4"
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"bracketSameLine": true,
		"bracketSpacing": true,
		"arrowParens": "avoid",
		"printWidth": 120,
		"overrides": [
			{
				"files": "*.{yml,yaml,md,sh}",
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			},
			{
				"files": "*.json",
				"options": {
					"singleQuote": false
				}
			},
			{
				"files": "*.md",
				"options": {
					"printWidth": 80,
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	}
}
